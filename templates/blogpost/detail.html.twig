{% extends 'base.html.twig' %}

{% block title %}Détails blog{% endblock %}

{% block body %}

  {#  <!-- IMAGE -->
    <section data-jarallax data-speed=".8" class="py-12 py-md-15 bg-cover jarallax" style="background-image: url(/img/Donkey_Kong_returns.jpg);"></section>
  #}
    <!-- HEADER -->
    <section class="pt-8 pt-md-11">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-9 col-xl-8">

                    <!-- Heading -->
                    <h1 class="display-4 text-center" style="text-transform: uppercase;">{{ actualite.titre }}</h1>


                    <!-- Meta -->
                    <div class="row align-items-center py-5 border-top border-bottom">
                        <div class="col-auto">

                            <!-- Avatar -->
                            <div class="avatar avatar-lg">
                                <img src="/img/logo_m.jpeg" alt="..." class="avatar-img rounded-circle">
                            </div>

                        </div>
                        <div class="col ms-n5">

                            <!-- Name -->
                            <h2 class="text-uppercase mb-0">
                         <strong> {{ actualite.user.prenom }} {{ actualite.user.nom }} </strong>
                            </h2>

                            <!-- Date -->
                            <time class="fs-sm text-muted" datetime="2019-05-20">
                                Publié le {{ actualite.publication |date('d/m/Y')}}
                            </time>

                        </div>
                        <div class="col-auto">

                            <!-- Share -->
                            <span class="h6 text-uppercase text-muted d-none d-md-inline me-4">
                  Partagé:
                </span>

                            <!-- Icons -->
                            <ul class="d-inline list-unstyled list-inline list-social">
                                <li class="list-inline-item list-social-item me-3">
                                    <a href="#!" class="text-decoration-none">
                                        <img src="/img/instagram.svg" class="list-social-icon" alt="...">
                                    </a>
                                </li>
                                <li class="list-inline-item list-social-item me-3">
                                    <a href="#!" class="text-decoration-none">
                                        <img src="/img/facebook.svg" class="list-social-icon" alt="...">
                                    </a>
                                </li>
                                <li class="list-inline-item list-social-item me-3">
                                    <a href="#!" class="text-decoration-none">
                                        <img src="/img/twitter.svg" class="list-social-icon" alt="...">
                                    </a>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </section>

    <!-- SECTION -->
    <section class="pt-6 pt-md-10 pb-md-12">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-9 col-xl-8">

                    <!-- Fugure -->
                    <figure class="figure mb-7">

                        <!-- Image -->
                        <img class="figure-img img-fluid rounded lift lift-lg" src="{{ vich_uploader_asset(actualite, 'imageFile') }}" alt="...">

                    </figure>

                    <!-- Text -->
                    <p class="mb-0">
                        {{ actualite.contenu }}
                    </p>

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </section>
    {% include "commentaire/form.html.twig" %}
    {% include "commentaire/commentaires.html.twig" %}
{% endblock %}